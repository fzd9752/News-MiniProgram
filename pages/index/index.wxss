.tabBar {
  display: flex;
  background: #857e95;
  
}

.tabBar-list {
  position: relative;
  flex: auto;
  flex-direction: column;
  text-align: center;
  font-size: 30rpx;
  line-height: 42rpx;
  color: white;
  margin-bottom: 10rpx;
}

.active{
  font-size: 35rpx;
  font-weight: bold;
}

.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: white;
}


